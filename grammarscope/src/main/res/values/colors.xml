<resources>

	<!-- generic -->
	<color name="backgroundColor">@android:color/white</color> <!-- generic window background -->
	<color name="foregroundColor">@android:color/black</color> <!-- generic window foreground -->

	<!-- primary -->
	<color name="primaryColor">#F3D876</color> <!-- app branding color for the app bar -->
	<color name="primaryLightColor">#FFF59D</color> <!-- framework -->
	<color name="primaryDarkColor">#D7AE1A</color> <!-- theme UI controls like checkboxes and text fields, status bar and contextual app bars -->
	<color name="onPrimaryColor">#202020</color> <!-- title, home, menu overflow -->
	<color name="highlightOnPrimaryColor">@android:color/black</color> <!-- framework + nav, tabs-->

	<!-- secondary -->
	<color name="secondaryColor">#ef6c00</color>
	<color name="secondaryLightColor">#EF9449</color> <!-- framework -->
	<color name="onSecondaryColor">#CCCCCC</color> <!-- subtitle -->

	<!-- shadow -->
	<color name="shadow">#80202020</color>

</resources>
