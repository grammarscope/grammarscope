<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="org.grammarscope.GraphParseActivity">

	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scrollbars="none">

		<include layout="@layout/toolbar" />

	</com.google.android.material.appbar.AppBarLayout>

	<ScrollView
		android:id="@+id/container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		android:padding="@dimen/surface_padding"
		android:scrollbars="vertical"
		app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

		<edu.uci.ics.jung.visualization.VisualizationViewer
			android:id="@+id/visualization_viewer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#fcfcfc"
			android:contentDescription="@string/description_graph" />

	</ScrollView>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/fab_refresh"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="65dp"
		android:layout_marginEnd="10dp"
		android:clickable="true"
		android:contentDescription="@string/description_graph_fab_refresh"
		android:focusable="true"
		app:fabSize="mini"
		app:layout_anchor="@+id/container"
		app:layout_anchorGravity="right|top"
		app:srcCompat="@drawable/ic_refresh"
		app:tint="@android:color/white"
		tools:srcCompat="@drawable/ic_refresh" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>