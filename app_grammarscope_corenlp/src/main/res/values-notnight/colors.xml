<resources>

	<!-- generic -->
	<color name="backgroundColor">@android:color/white</color> <!-- generic window background -->
	<color name="foregroundColor">@android:color/black</color> <!-- generic window foreground -->

	<!-- primary -->
	<color name="primaryColor">#EF94A4</color> <!-- app branding color for the app bar -->
	<color name="primaryLightColor">#C17981</color> <!-- framework -->
	<color name="primaryDarkColor">#B1395B</color> <!-- theme UI controls like checkboxes and text fields, status bar and contextual app bars -->
	<color name="onPrimaryColor">#383838</color> <!-- title, home, menu overflow -->
