<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<uses-permission android:name="android.permission.INTERNET" />

	<uses-feature
		android:name="android.software.webview"
		android:required="true" />

	<application
		android:name=".Application"
		android:allowBackup="true"
		android:dataExtractionRules="@xml/data_extraction_rules"
		android:fullBackupContent="@xml/backup_descriptor"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:launchMode="singleTop"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/MyTheme"
		tools:ignore="GoogleAppIndexingWarning"
		tools:targetApi="s">

		<activity
			android:name=".MainActivity"
			android:exported="true"
			android:label="@string/title_activity_main">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".DependencyParseActivity"
			android:configChanges="uiMode"
			android:exported="false"
			android:label="@string/title_activity_parse"
			android:launchMode="singleTop"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name=".DependencyGraphParseActivity"
			android:configChanges="uiMode"
			android:exported="false"
			android:hardwareAccelerated="true"
			android:label="@string/title_activity_dependency_graph"
			android:launchMode="singleTop"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name=".DependencyGraphsParseActivity"
			android:configChanges="uiMode"
			android:exported="false"
			android:hardwareAccelerated="true"
			android:label="@string/title_activity_dependency_graphs"
			android:launchMode="singleTop"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name="org.grammarscope.SemanticParseActivity"
			android:configChanges="uiMode"
			android:exported="false"
			android:label="@string/title_activity_semantic_parse"
			android:launchMode="singleTop"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name=".SemanticGraphParseActivity"
			android:configChanges="uiMode"
			android:exported="false"
			android:hardwareAccelerated="true"
			android:label="@string/title_activity_semantic_graph_parse"
			android:launchMode="singleTop"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name=".SemanticGraphsParseActivity"
			android:configChanges="uiMode"
			android:exported="false"
			android:hardwareAccelerated="true"
			android:label="@string/title_activity_semantic_graphs_parse"
			android:launchMode="singleTop"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name="org.grammarscope.LabelsActivity"
			android:exported="false"
			android:label="@string/title_activity_labels"
			android:launchMode="singleTop"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name=".SettingsActivity"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name=".DependencySettingsActivity"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name=".SemanticSettingsActivity"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name="org.depparse.common.AboutActivity"
			android:exported="false"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name="org.depparse.common.WebActivity"
			android:exported="false"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name="com.bbou.textgetter.GetTextActivity"
			android:exported="false"
			android:launchMode="singleTask"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name="com.bbou.others.OthersActivity"
			android:exported="false"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name="com.bbou.donate.DonateActivity"
			android:exported="false"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name="com.bbou.download.coroutines.DownloadActivity"
			android:exported="false"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<activity
			android:name="com.bbou.download.UpdateActivity"
			android:exported="false"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>

		<service
			android:name="org.grammarscope.service.server.bound.syntaxnet.SyntaxnetBoundService"
			android:enabled="true"
			android:exported="false" />

		<provider
			android:name="androidx.core.content.FileProvider"
			android:authorities="${applicationId}.fileprovider"
			android:exported="false"
			android:grantUriPermissions="true"
			tools:replace="android:authorities">
			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/file_paths" />
		</provider>

		<!--
		<receiver
			android:name="org.grammarscope.ProviderManager"
			android:enabled="true"
			android:exported="false">
			<intent-filter>
				<action android:name="org.grammmarscope.provider.ACTION"/>
			</intent-filter>
		</receiver>
		-->

	</application>

</manifest>
